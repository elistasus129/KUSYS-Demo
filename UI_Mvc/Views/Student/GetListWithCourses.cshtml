@using EntityLayer.Concrete
@model List<Student>
@{
    ViewData["Title"] = "GetListWithCourses";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Student and Course Matching</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">Student Id</th>
                <th scope="col" class="sort" data-sort="budget">First Name</th>
                <th scope="col" class="sort" data-sort="budget">Last Name</th>
                <th scope="col" class="sort" data-sort="budget">Date of Birth</th>
                <th scope="col" class="sort" data-sort="budget">Selected Course Code</th>
                <th scope="col" class="sort" data-sort="budget">Name of Selected Course</th>

                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.StudentId
                    </th>
                    <td class="budget">
                        @item.FirstName
                    </td>
                    <td class="budget">
                        @item.LastName
                    </td>
                    <td class="budget">
                        @item.BirthDate
                    </td>
                    <td class="budget">
                        @item.CourseId
                    </td>
                    <td class="budget">

                        @if (@item.CourseId == null)
                        {
                            <p>Course Not Assigned.</p>
                        }
                        else
                        {
                            @item.Course.CourseName
                        }

                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>


